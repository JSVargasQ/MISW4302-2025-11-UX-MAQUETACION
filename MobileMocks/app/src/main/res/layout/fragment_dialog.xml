<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_surface">


    <ImageView
        android:id="@+id/dialog_image_congrats"
        android:layout_width="117dp"
        android:layout_height="142dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/summary_heart"
        android:src="@drawable/gold_medal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_congrats"
        android:layout_width="380dp"
        android:layout_height="28dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/dialog_title"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_image_congrats" />

    <TextView
        android:id="@+id/dialog_share"
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/dialog_share"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_congrats" />

    <Button
        android:id="@+id/fb_button"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="7dp"
        android:contentDescription="@string/dialog_fb"
        app:icon="@drawable/fb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_share" />

    <Button
        android:id="@+id/ig_button"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="7dp"
        android:contentDescription="@string/dialog_ig"
        app:icon="@drawable/ig"
        app:layout_constraintStart_toEndOf="@+id/fb_button"
        app:layout_constraintTop_toBottomOf="@+id/dialog_share" />

    <Button
        android:id="@+id/x_button"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="7dp"
        android:contentDescription="@string/dialog_x"
        app:icon="@drawable/x"
        app:layout_constraintStart_toEndOf="@+id/ig_button"
        app:layout_constraintTop_toBottomOf="@+id/dialog_share" />

    <TextView
        android:id="@+id/dialog_fb"
        android:layout_width="58dp"
        android:layout_height="16dp"
        android:layout_marginStart="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/dialog_fb"
        android:textAppearance="?attr/textAppearanceBodySmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fb_button" />

    <TextView
        android:id="@+id/dialog_ig"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginStart="74dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/dialog_ig"
        android:textAppearance="?attr/textAppearanceBodySmall"
        app:layout_constraintStart_toEndOf="@+id/fb_button"
        app:layout_constraintTop_toBottomOf="@+id/ig_button" />

    <TextView
        android:id="@+id/dialog_x"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginStart="73dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/dialog_x"
        android:textAppearance="?attr/textAppearanceBodySmall"
        app:layout_constraintStart_toEndOf="@+id/ig_button"
        app:layout_constraintTop_toBottomOf="@+id/x_button" />

    <Button
        android:id="@+id/cancel_dialog"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="40dp"
        android:text="@string/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_ig" />


</androidx.constraintlayout.widget.ConstraintLayout>